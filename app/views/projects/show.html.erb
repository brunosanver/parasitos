<div class="row">
  <div class="col-md-2"></div>
  <div class="col-md-8">
    <h2 style="margin-bottom: 20px;"><%= @project.title %></h2>
    <h4>Adreça: <%= @project.direction %></h4>
    <h5>Categoria: <%=
      if !@project.category.blank?
        @project.category.name
      else
        '-sense especificar-'
      end %></h5>
    <h5>Fabricació: <%=
      if !@project.fabrication.blank?
        @project.fabrication.name
      else
        '-sense especificar-'
      end %></h5>
    <div class="img-cont" style="margin-bottom: 40px;"><img height="500" width="932" src="<%=
      if @project.avatar?
        @project.avatar_url.to_s
      else
        'http://www.cadagency.co.uk/wp-content/uploads/2016/02/fig-2-2.jpg'
      end %>"></div>
    <p class="proj-descript"><%= simple_format @project.description %></p>

    <div id="row-0" class="row row-0">

      <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
          <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
          <li data-target="#myCarousel" data-slide-to="1"></li>
          <li data-target="#myCarousel" data-slide-to="2"></li>
          <li data-target="#myCarousel" data-slide-to="3"></li>
          <li data-target="#myCarousel" data-slide-to="4"></li>
          <li data-target="#myCarousel" data-slide-to="5"></li>
          <li data-target="#myCarousel" data-slide-to="6"></li>
          <li data-target="#myCarousel" data-slide-to="7"></li>
          <li data-target="#myCarousel" data-slide-to="8"></li>
          <li data-target="#myCarousel" data-slide-to="9"></li>
          <li data-target="#myCarousel" data-slide-to="10"></li>
          <li data-target="#myCarousel" data-slide-to="11"></li>
          <li data-target="#myCarousel" data-slide-to="12"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">

          <div class="item active">
            <img src="/projecte01.jpg" alt="Chania">
          </div>

          <div class="item">
            <img src="/projecte02.jpg" alt="Chicago">
          </div>

          <div class="item">
            <img src="/projecte03.jpg" alt="New York">
          </div>

          <div class="item">
            <img src="/projecte04.jpg" alt="New York">
          </div>

          <div class="item">
            <img src="/projecte05.jpg" alt="New York">
          </div>

          <div class="item">
            <img src="/projecte06.jpg" alt="New York">
          </div>

          <div class="item">
            <img src="/projecte07.jpg" alt="New York">
          </div>

          <div class="item">
            <img src="/projecte08.jpg" alt="New York">
          </div>

          <div class="item">
            <img src="/projecte09.jpg" alt="New York">
          </div>

          <div class="item">
            <img src="/projecte10.jpg" alt="New York">
          </div>

          <div class="item">
            <img src="/projecte11.jpg" alt="New York">
          </div>

          <div class="item">
            <img src="/projecte12.jpg" alt="New York">
          </div>

          <div class="item">
            <img src="/projecte13.jpg" alt="New York">
          </div>
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
          <span class="glyphicon glyphicon-chevron-left"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
          <span class="glyphicon glyphicon-chevron-right"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>

    </div>

    <div id="map"></div>

    <%= link_to "Atrás", root_path %>

    <% if user_signed_in? %>

        <% if @project.user_id == current_user.id %>
            <%= "|" %>
            <%= link_to "Editar", edit_project_path(@project) %>
            <%= "|" %>
            <%= link_to "Eliminar", project_path(@project), method: :delete, data: { confirm: "Estàs segur?" } %>
        <% end %>

    <% end %>

  </div>
  <div class="col-md-2"></div>
</div>

